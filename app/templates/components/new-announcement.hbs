{{#if addNewAnnouncement}}
    <h1>New Announcement</h1>
    <div>
        <form>
            <div class="form-group">
                <label for="title">Title:</label>
                {{input value=title id="title"}}
            </div>

            <div class="form-group">
                <label for="start">Start Date:</label>
                {{input value=start id="start"}}
            </div>

            <div class="form-group">
                <label for="end">End Date:</label>
                {{input value=end id="end"}}
            </div>

            <div class="form-group">
                <label for="message">Message:</label>
                {{input value=message id="message"}}
            </div>

            <button {{action 'saveAnnouncement1'}}>Save</button>
        </form>
    </div>
{{else}}
    <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
