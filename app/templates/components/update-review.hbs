{{#if updateReviewForm}}
    <h1>update {{review.author}}'s review</h1>
    <div class="container">
        <form>
            <div class="form-group">
                <label for="author">Author</label>
                {{input value=author id="author" placeholder=review.author}}
            </div>
            <div class="form-group">
                <label for="rating">Rating</label>
                {{input value=rating id="rating" placeholder=review.rating}}
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                {{input value=content id="content" placeholder=review.content}}
            </div>
            <button {{action 'update' review}}>Save</button>
        </form>
    </div>
{{else}}
<button {{action 'updateReviewForm'}}> Update Review</button>
{{/if}}
