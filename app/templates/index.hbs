<div class="container">
    <h1> Welcome to Super Rentals </h1>

    <p>We hope you find exactly what you're looking for in a place to stay.</p>

    <ul>
        {{#each model.rentals as |rental|}}
        <li>{{rental-tile rental=rental}}</li>
        {{/each}}
    </ul>

    {{new-rental saveRental2="saveRental3"}}

    <h2>All Reviews</h2>

    <ul>
        {{#each model.reviews as |review|}}
            <li>{{review.rating}} - {{review.content}} - by {{review.author}}</li>
        {{/each}}
    </ul>
    <hr>

    {{#link-to 'about'}}About{{/link-to}}
    {{#link-to 'contact'}}Contact us{{/link-to}}
    {{#link-to 'announcements'}}Announcements{{/link-to}}
</div>
